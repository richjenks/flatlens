{
	"name": "flatlens",
	"productName": "FlatLens",
	"version": "1.0.0",
	"description": "3D Video on Any Screen",
	"main": "electron/main.js",
	"scripts": {
		"dev": "vite",
		"e:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
		"build": "vite build",
		"e:build": "npm run build && electron-builder",
		"serve": "vite preview",
		"e:serve": "electron .",
		"e:build-mac": "npm run build && electron-builder --mac",
		"e:build-windows": "npm run build && electron-builder --win",
		"e:build-linux": "npm run build && electron-builder --linux",
		"e:build-all": "npm run build && electron-builder -mwl",
		"icons": "./assets/src/render.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.34.0",
		"concurrently": "^8.2.2",
		"electron": "^27.0.0",
		"electron-builder": "^24.6.4",
		"eslint": "^9.34.0",
		"globals": "^16.3.0",
		"three": "^0.158.0",
		"vite": "^5.0.0",
		"wait-on": "^7.0.1"
	},
	"build": {
		"appId": "com.richjenks.flatlens",
		"directories": {
			"output": "dist-electron"
		},
		"files": [
			"dist/**/*",
			"electron/**/*"
		],
		"mac": {
			"category": "public.app-category.video",
			"icon": "assets/icon.icns",
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				},
				{
					"target": "zip",
					"arch": [
						"x64",
						"arm64"
					]
				}
			]
		},
		"win": {
			"icon": "assets/icon.ico",
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				},
				{
					"target": "portable",
					"arch": [
						"x64"
					]
				}
			]
		},
		"linux": {
			"icon": "assets/icon.png",
			"target": [
				{
					"target": "AppImage",
					"arch": [
						"x64"
					]
				}
			]
		}
	},
	"keywords": [
		"3d",
		"video",
		"player",
		"sbs",
		"side-by-side",
		"ou",
		"over-under",
		"vr",
		"electron"
	],
	"author": "Rich Jenks",
	"license": "MIT",
	"dependencies": {
		"@fortawesome/fontawesome-free": "^6.7.2",
		"tippy.js": "^6.3.7"
	}
}
